{
  "name": "ReactRedux-Atomic-Boilerplate",
  "version": "1.0.0",
  "description": "An easy Boilerplate with Webpack (+ Webpack Dev Server), ES6 (+ useful plugins), React, Redux, React-Router, CSS-Modules, Sass, Isomorphic-fetch and Mocha testing tools.",
  "main": "./src/index.jsx",
  "scripts": {
    "clean": "// Clean project assets //",
    "clean": "rm -rf public/*",

    "start": "// Start Webpack Dev Server //",
    "start": "webpack-dev-server --config webpack.config.dev.js --hot --inline",

    "build": "// Build Production assets //",
    "build": "NODE_ENV='production' webpack -p --config webpack.config.production.js",

    "test": "// Start Mocha test once //",
    "test": "mocha-webpack --webpack-config webpack.config.test.js 'app/**/*.spec.jsx' --include ./app/tests/test_helper.js",

    "test:watch": "// Start Mocha test watcher //",
    "test:watch": "npm run test -- --watch"
  },
  "author": "Zorahrel <hello@zorahrel.com> (http://zorahrel.com/)",
  "license": "ISC",
  "private": false,
  "devDependencies": {
    "autoprefixer": "^6.4.1",
    "babel-core": "^6.14.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-syntax-jsx": "^6.13.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "chai": "^3.5.0",
    "chai-enzyme": "^0.5.1",
    "cheerio": "^0.22.0",
    "css-loader": "^0.25.0",
    "enzyme": "^2.4.1",
    "eslint": "^3.4.0",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-react": "^6.2.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "image-webpack-loader": "^2.0.0",
    "isomorphic-fetch": "^2.2.1",
    "jsdom": "^9.5.0",
    "json-loader": "^0.5.4",
    "mocha": "^3.0.2",
    "mocha-webpack": "^0.6.0",
    "node-sass": "^3.9.3",
    "path": "^0.12.7",
    "postcss-loader": "^0.13.0",
    "react-addons-test-utils": "^15.3.1",
    "react-hot-loader": "^3.0.0-beta",
    "redux-form": "^6.0.2",
    "sass-loader": "^4.0.1",
    "sinon": "^1.17.5",
    "sinon-chai": "^2.8.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.15.1",
    "webpack-node-externals": "^1.3.3"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-redux": "^4.4.5",
    "react-router": "^2.7.0",
    "redux": "^3.6.0",
    "redux-thunk": "^2.1.0"
  }
}
